<Window x:Class="CS_GO_AutoAccept.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS_GO_AutoAccept"
        mc:Ignorable="d"
        Title="CS:GO AutoAccepter V.1.0 (Alpha)" Height="450" Width="800"
        ResizeMode="CanMinimize">
    
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\Marcus Jensen\Desktop\csgo.jpg"></ImageBrush>
        </Grid.Background>

        <CheckBox x:Name="Program_state" Content="Auto Accept (OFF)" IsChecked="False" Margin="0,80,220,300" FontSize="12" Foreground="Red" FontWeight="Bold" Checked="Program_state_Checked" Unchecked="Program_state_Unchecked">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="2" ScaleY="2"/>
            </CheckBox.LayoutTransform>
        </CheckBox>

        <Button BorderThickness="0" Margin="550 340 0 0" Background="Transparent" Cursor="Hand" Click="Discord_Button_Click" ToolTip="Join my Discord server, its a great place for asking questions or just hanging out :)">
            <StackPanel>
                <Image Source="C:\Users\Marcus Jensen\Desktop\discord.png" Height="114"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>